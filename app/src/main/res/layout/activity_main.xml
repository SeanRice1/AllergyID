<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b5e20"
    android:layout_weight="10"
    tools:context=".MainActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="175dp"
            android:layout_height="180dp"
            android:id="@+id/anchor"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/ic_find_in_page_black_36dp"
            android:layout_alignParentStart="false"
            android:alpha="0" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout1"
            android:layout_toEndOf="@+id/layout2"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@+id/layout3">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editAllergiesBut"
                android:background="@android:color/holo_orange_light"
                android:src="@drawable/ic_settings_black_36dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout2"
            android:layout_above="@+id/layout3"
            android:layout_alignRight="@+id/layout3">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/manualSearchButton"
                android:background="@android:color/holo_red_light"
                android:src="@drawable/ic_find_in_page_black_36dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_margin="5dp"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/anchor"
            android:layout_below="@+id/anchor"
            android:id="@+id/layout3">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/infoButton"
                android:background="@android:color/holo_green_dark"
                android:src="@drawable/ic_info_black_36dp"

                android:layout_margin="5dp"
                android:clickable="true" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scannerButton"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_add_a_photo_black_36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:clickable="true" />

    </RelativeLayout>

</LinearLayout>